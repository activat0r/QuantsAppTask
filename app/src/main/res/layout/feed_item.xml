<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/_4sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:elevation="@dimen/_1sdp"
    >
    
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/feedList_image"
        android:layout_width="@dimen/_50sdp"
        android:layout_height="@dimen/_60sdp"
        android:src="@color/teal_200"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        ></androidx.appcompat.widget.AppCompatImageView>

    <TextView
        android:layout_marginStart="@dimen/_4sdp"
        android:id="@+id/feedList_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="name"
        android:maxLines="1"
        android:ellipsize="end"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
        app:layout_constraintTop_toTopOf="@id/feedList_image"
        app:layout_constraintStart_toEndOf="@id/feedList_image"
        app:layout_constraintEnd_toEndOf="parent"></TextView>

    <TextView
        android:layout_marginStart="@dimen/_4sdp"
        android:id="@+id/feedList_status"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:ellipsize="end"
        android:text="Status"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/feedList_image"
        app:layout_constraintTop_toBottomOf="@id/feedList_name"></TextView>

    <TextView
        android:layout_marginStart="@dimen/_4sdp"
        android:id="@+id/feedList_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="time"
        app:layout_constraintTop_toBottomOf="@id/feedList_status"
        app:layout_constraintStart_toEndOf="@id/feedList_image"
        ></TextView>
</androidx.constraintlayout.widget.ConstraintLayout>
